        android:id="@+id/viewSpecimen"
        android:name="via.sep4.ViewSpecimen"
        android:label="fragment_view_specimen"
        tools:layout="@layout/fragment_view_specimen" />
    <fragment
        android:id="@+id/signIn"
        android:name="via.sep4.SignIn"
        android:label="SignIn"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signIn_to_dashboard"
            app:destination="@id/dashboard" />
