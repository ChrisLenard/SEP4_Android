<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/co2_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CO2Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/co2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CO2 level"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/MushroomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MushroomName - Stage 3 - Pinning"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/co2_range_recommended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended range:"
                    android:textSize="22sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/co2_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="800  - 1500 ppm"
                    android:textAlignment="center"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/co2_current_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Currently: "
                    android:textSize="22sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/co2_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1200 ppm"
                    android:textAlignment="center"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/co2_visualizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ImageView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar"
        android:layout_width="411dp"
        android:layout_height="86dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>